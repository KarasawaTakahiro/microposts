<div class="row">

    <aside class="col-md-4">
        <section class="user_info">
            <h1>
                <%= gravatar_for @user %>
                <%= @user.name %>
            </h1>
        </section>
        <section>
            <div>
                <ul class="list-group">
                    <li class="list-group-item text-center"><span class="glyphicon glyphicon-user"></span><br /><%= @user.profile %></li>
                    <li class="list-group-item text-center"><span class="glyphicon glyphicon-map-marker"></span><br /><%= @user.place %></li>
                    <li class="list-group-item text-center"><span class="glyphicon glyphicon-home"></span><br /><%= @user.homepage %></li>
                    <li class="list-group-item text-center"><span class="glyphicon glyphicon-heart"></span><br /><%= @user.birthday %></li>
                </ul>
            </div>
        </section>
        <div>
            <a class="col-md-6 col-sm-6 btn btn-primary" href="<%= followings_path %>"><small>フォロー</small><br /><%= @user.following_users.length %></a>
            <a class="col-md-6 col-sm-6 btn btn-primary" href="<%= followers_path %>"><small>フォロワー</small><br /><%= @user.follower_users.length %></a>
        </div>
    </aside>

    <div class="col-md-8">
        <div>
            <%= render 'follow_form' if logged_in? %>
        </div>
        <div>
            <ul class="nav nav-tabs">
               <li class="active"><a href="#tab_microposts" data-toggle="tab">Microposts (<%= @user.microposts.count %>)</a></li>
               <li><a href="#tab_favorites" data-toggle="tab">Favorites (<%= @user.favorite_relationships.count %>)</a></li>
            </ul>
            
            <div class="tab-content">
                <div class="tab-pane fade in active" id="tab_microposts">
                    <% if @user.microposts.any? %>
                        <ol class="microposts">
                            <%= render @microposts %>
                        </ol>
                    <% else %>
                        <p>tweet is none, yet</p>
                        <p>let's tweet!</p>
                    <% end %>
                </div>
    
                <div class="tab-pane fade" id="tab_favorites">
                    <% if @user.favorite_relationships.any? %>
                        <ol class="microposts">
                            <%= render @favorites %>
                        </ol>
                    <% else %>
                        <p>favorite tweet is none!</p>
                        <p>let's touch heart icon with tweets!</p>
                    <% end %>
                </div>
            </div>
        </div>
    </div>

</div>
